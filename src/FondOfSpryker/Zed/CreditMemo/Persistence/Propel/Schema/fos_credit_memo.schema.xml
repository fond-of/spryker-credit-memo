<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\CreditMemo\Persistence" package="src.Orm.Zed.CreditMemo.Persistence">

    <table name="fos_credit_memo" phpName="FosCreditMemo" identifierQuoting="true">
        <column name="id_credit_memo" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>

        <column name="fk_sales_order" required="true" type="INTEGER"/>
        <column name="fk_credit_memo_address" required="true" type="INTEGER"/>
        <column name="fk_locale" type="INTEGER"/>

        <column name="credit_memo_reference" required="true" size="255" type="VARCHAR"/>

        <column name="customer_reference" required="true" size="255" type="VARCHAR"/>
        <column name="email" required="false" size="255" type="VARCHAR"/>
        <column name="first_name" required="false" size="100" type="VARCHAR"/>
        <column name="last_name" required="false" size="100" type="VARCHAR"/>
        <column name="salutation" type="ENUM" valueSet="Mr, Mrs, Dr, Ms, Diverse" required="false"/>

        <column name="price_mode" type="ENUM" valueSet="NET_MODE, GROSS_MODE" required="false"/>

        <column name="currency_iso_code" type="VARCHAR" size="5" required="false"/>
        <column name="store" type="VARCHAR" size="255" required="false"/>

        <foreign-key name="fos_credit_memo-fk_sales_order" foreignTable="spy_sales_order" phpName="SalesOrder">
            <reference local="fk_sales_order" foreign="id_sales_order"/>
        </foreign-key>

        <foreign-key name="fos_credit_memo-fk_credit_memo_address" foreignTable="fos_credit_memo_address"
                     phpName="Address">
            <reference local="fk_credit_memo_address" foreign="id_credit_memo_address"/>
        </foreign-key>

        <foreign-key name="fos_credit_memo-fk_locale" foreignTable="spy_locale" phpName="Locale">
            <reference local="fk_locale" foreign="id_locale"/>
        </foreign-key>

        <id-method-parameter value="fos_credit_memo_pk_seq"/>

        <behavior name="timestampable"/>
    </table>

    <table name="fos_credit_memo_item" phpName="FosCreditMemoItem" identifierQuoting="true">
        <column name="id_credit_memo_item" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>

        <column name="fk_credit_memo" type="INTEGER" required="true"/>
        <column name="fk_sales_order_item" type="INTEGER" required="true"/>

        <column name="sku" required="true" size="255" type="VARCHAR"/>
        <column name="name" required="true" size="255" type="VARCHAR"/>
        <column name="quantity" type="INTEGER" unsigned="true" default="1" required="true"/>

        <foreign-key name="fos_credit_memo_item-fk_credit_memo" foreignTable="fos_credit_memo">
            <reference local="fk_credit_memo" foreign="id_credit_memo"/>
        </foreign-key>
        <foreign-key name="fos_credit_memo_item-fk_sales_order_item" foreignTable="spy_sales_order_item">
            <reference local="fk_sales_order_item" foreign="id_sales_order_item"/>
        </foreign-key>

        <id-method-parameter value="fos_credit_memo_item_pk_seq"/>
    </table>

    <table name="fos_credit_memo_address" phpName="FosCreditMemoAddress" identifierQuoting="true">
        <column name="id_credit_memo_address" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>

        <column name="fk_country" type="INTEGER" required="true"/>
        <column name="fk_region" type="INTEGER"/>
        <column name="address1" size="255" type="VARCHAR"/>
        <column name="address2" size="255" type="VARCHAR"/>
        <column name="address3" size="255" type="VARCHAR"/>
        <column name="cell_phone" size="255" type="VARCHAR"/>
        <column name="city" size="255" type="VARCHAR" required="true"/>
        <column name="comment" size="255" type="VARCHAR"/>
        <column name="company" size="255" type="VARCHAR"/>
        <column name="description" size="255" type="VARCHAR"/>
        <column name="email" size="255" type="VARCHAR" required="false"/>
        <column name="first_name" required="true" size="100" type="VARCHAR"/>
        <column name="last_name" required="true" size="100" type="VARCHAR"/>
        <column name="middle_name" required="false" size="100" type="VARCHAR"/>
        <column name="phone" size="255" type="VARCHAR"/>
        <column name="po_box" size="255" type="VARCHAR"/>
        <column name="salutation" type="ENUM" valueSet="Mr, Mrs, Dr, Ms, Diverse"/>
        <column name="zip_code" size="15" type="VARCHAR" required="true"/>

        <foreign-key name="fos_credit_memo_address-fk_country" foreignTable="spy_country">
            <reference local="fk_country" foreign="id_country"/>
        </foreign-key>
        <foreign-key name="fos_credit_memo_address-fk_region" foreignTable="spy_region">
            <reference local="fk_region" foreign="id_region"/>
        </foreign-key>

        <id-method-parameter value="fos_credit_memo_address_pk_seq"/>
    </table>

</database>
